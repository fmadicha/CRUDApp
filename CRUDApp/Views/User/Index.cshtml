@model IEnumerable<CRUDApp.Models.User>
@{
    ViewData["Title"] = "Index";
}
<h2> List of Users</h2>
<div class="col mb-3">
    <a asp-controller="User" asp-action="Create" class="btn btn-lg btn-primary">Add a new user</a>
</div>
<div class="container shadow p-5">
<table  class="table table-bordered table-hover" style="width:100%">
    <thead>
        <tr>
            <th>ProfilePicture</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Gender</th>
            <th>Age</th>
            <th>UserType</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(User u in Model)
        {
            <tr>
                <td width="20%">@u.ProfilePicture</td>
                <td width="20%">@u.FirstName</td>
                <td width="20%">@u.LastName</td>
                <td width="20%">@u.Gender</td>
                <td width="20%">@u.Age</td>
                <td width="20%">@u.UserType</td>
                <td>
                        <div role="group" class="w-60 btn-group text-center">
                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@u.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                 </td>
            </tr>
        }
    </tbody>
</table>
</div>